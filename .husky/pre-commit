#!/usr/bin/env bash
echo "ğŸ” Running pre-commit hooks..."

# Cross-platform approach - use the local binary directly
if [ -f "./node_modules/.bin/lint-staged" ]; then
    ./node_modules/.bin/lint-staged
elif command -v npx >/dev/null 2>&1; then
    npx lint-staged
else
    echo "âŒ Could not find lint-staged. Please run 'npm install' first."
    exit 1
fi

if [ $? -eq 0 ]; then
    echo "âœ… Pre-commit checks passed!"
else
    echo "âŒ Pre-commit checks failed. Please fix the issues above."
    exit 1
fi
